@model IEnumerable<UGetADog.Models.Giver>
@Styles.Render("~/Style/Model.css")

@{
    ViewBag.Title = "Index of givers";
}

<h2>Givers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GiverID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GiverID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GiverID }) |
                @Html.ActionLink("Details", "Details", new { id = item.GiverID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GiverID })
            </td>
        </tr>
    }

</table>

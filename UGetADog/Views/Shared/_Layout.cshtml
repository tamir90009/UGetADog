<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UGetADog!!!!</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("UGetADog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @try
                    {
                        if (Session["Role"].ToString() == "Admin")
                        {
                            <li>@Html.ActionLink("User", "Index", "Users")</li>
                            <li>@Html.ActionLink("Giver", "Index", "givers")</li>
                            <li>@Html.ActionLink("Statistics", "AdminIndex", "Dogs")</li>

                        }
                        if (Session["Role"].ToString() != "null")
                        {
                            <li>@Html.ActionLink("My Account", "MyAccount", "Users")</li>
                            <li>@Html.ActionLink("FullGiver", "Index", "FullGivers")</li>
                            <li>@Html.ActionLink("Dog", "Index", "Dogs")</li>

                        }
                        if (Session["Role"].ToString() == "Giver")
                        {
                            if (Session["GID"].ToString() != null)
                            {
                            <li>@Html.ActionLink("Weather", "Weather", "Givers")</li>
                            }
                        }
                    }
                    catch
                    {
                        <li>@Html.ActionLink("LogIn", "Login", "Users")</li>
                    }

                    <li>@Html.ActionLink("You Should Adopt", "Index", "Adopting")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>